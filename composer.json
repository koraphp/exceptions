{
    "name": "kora/exceptions",
    "type": "library",
    "description": "Exceptions for the Kora Framework.",
    "homepage": "https://github.com/koraphp/exceptions",
    "license": "MIT",
    "authors": [
        {
            "name": "Uriel Wilson",
            "email": "uriel@koraphp.com",
            "homepage": "https://koraphp.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "kora/debug": "dev-main",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Kora\\Exceptions\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exceptions\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
